pipeline{
    agent any
    tools{ maven 'Maven'}
    
    stages{
        
        stage('maven build'){
            steps{
                sh 'mvn clean package'
            }
        }
        
       stage('deploy'){
            steps{
            
            sshagent(['JenkinsTomcat']) {
    sh 'scp -o StrictHostKeyChecking=no target/*.war tomcat@3.99.132.158:/home/tomcat/tomcat8/webapps'
} 
}
    }
}
